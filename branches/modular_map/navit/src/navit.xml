		<map type="mg" data="/nobackup/reiseplaner/DIRMAP_MAP/DIE.map/smp5.smp" />
	</mapset>
	<layout name="Tag">
		<layer name="sea" details="0">
			<item type="sea" zoom="1">
				<polygon color="#82c8ea" />
